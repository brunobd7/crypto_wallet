<p id="notice"><%= notice %></p>

<h1><%=Coin.model_name.human(count: @coins.count) %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%=@coins.human_attribute_name(:description) %></th>
      <th><%=@coins.human_attribute_name(:acronym) %></th>
      <th><%=@coins.human_attribute_name(:url_image)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td> <%= image_tag coin.url_image, size: 35 %></td>
        <td><%= link_to I18n.t('links.show'), coin  , class:"btn btn-primary"%></td>
        <td><%= link_to I18n.t('links.edit'), edit_coin_path(coin)  , class:"btn btn-warning"%></td>
        <td><%= link_to I18n.t('links.delete'), coin, class:"btn btn-danger",method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to I18n.t('new.coin'), new_coin_path  , class:"btn btn-primary"%>
